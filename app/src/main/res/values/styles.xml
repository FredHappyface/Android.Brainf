<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="navigationBarColor">@color/darkRed</item>
        <item name="appBarColor">@color/red</item>
        <item name="appBarTextColor">@color/white</item>
        <item name="android:navigationBarColor">?attr/navigationBarColor</item>
        <item name="colorPrimaryDark">?attr/navigationBarColor</item>
        <item name="colorPrimary">?attr/appBarColor</item>
        <item name="android:textColorPrimary">?attr/appBarTextColor</item>
        <item name="colorAccent">?attr/foregroundColorAccent</item>
        <item name="android:windowBackground">?attr/backgroundColorPrimary</item>

    </style>


    <style name="LightTheme" parent="AppTheme">
        <item name="backgroundColorPrimary">@color/white</item>
        <item name="backgroundColorSecondary">@color/lightGrey</item>

        <item name="foregroundColorAccent">@color/lightRed</item>
        <item name="foregroundColorPrimary">@color/black</item>
        <item name="foregroundColorSecondary">@color/grey</item>

    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="backgroundColorPrimary">@color/darkGrey</item>
        <item name="backgroundColorSecondary">@color/grey</item>

        <item name="foregroundColorAccent">@color/lightRed</item>
        <item name="foregroundColorPrimary">@color/white</item>
        <item name="foregroundColorSecondary">@color/lightGrey</item>
    </style>

    <style name="BlackTheme" parent="AppTheme">
        <item name="backgroundColorPrimary">@color/black</item>
        <item name="backgroundColorSecondary">@color/black</item>

        <item name="foregroundColorAccent">@color/lightRed</item>
        <item name="foregroundColorPrimary">@color/white</item>
        <item name="foregroundColorSecondary">@color/white</item>

        <item name="appBarColor">@color/black</item>
    </style>


    <style name="heading_text_style">
        <item name="android:textColor">?attr/foregroundColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:layout_marginLeft">@dimen/text_content_margin</item>
        <item name="android:layout_marginRight">@dimen/text_content_margin</item>
        <item name="android:layout_marginTop">@dimen/text_content_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/text_content_margin_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="heading2_text_style" parent="heading_text_style">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <style name="body_text_style" parent="heading2_text_style">
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>


    <style name="radio_style" parent="body_text_style">
        <item name="android:buttonTint">?attr/foregroundColorAccent</item>
    </style>

    <style name="code_text_style" parent="body_text_style">
        <item name="android:textColorHint">?attr/foregroundColorSecondary</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:background">@drawable/textbox</item>
    </style>

    <style name="button_style" parent="heading2_text_style">
        <item name="android:background">@drawable/button</item>
        <item name="android:minHeight">@dimen/text_size_h1</item>
    </style>


</resources>
